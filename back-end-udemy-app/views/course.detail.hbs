{{#section 'css'}}
<style>
    *{
        box-sizing: border-box !important;
        font-family: 'Quicksand';
    }
.course-cover {
    height: 100vh;
    box-shadow: 0px 2px 4px rgb(128 128 128 / 50%);
    text-align: left;
    border-radius: 0.5rem;
    padding: 1rem;
    box-sizing: border-box;
    margin: 0rem auto;
    
}

.content-main {
    border-radius: 0.5rem;
    width: 100%;
    height: 100%;
    padding: 1rem;
    display: flex;
    box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.2);
    flex-direction: column;
    background-color: aliceblue;
}

.content-main .image div{
    height: 100%;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
}

.content-main .image{
    height: 15rem;
}

.body{
    zoom: 80%;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.info-course{
    flex-basis: 70%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.info-course .course-name{
    font-weight: 900;
    font-family: 'Montserrat';
    color: #00ab15;
    font-size: 1.55rem;
    margin-top: 1rem;
}

.text-main{
    font-weight: bold;
    color: #00ab15;

}

.text-warning{
    font-weight: bold;
}

.course-desc{
    text-align: justify;
}

.lession-info, .status-info{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.cat-name{
    font-weight: 500;
    color: rgba(128, 128, 128, 0.8);
}

.last-update, .teacher, .lession-info p, .status-info p{
    margin: .25rem 0rem;
}

.button{
    width: 100%;
    display: flex;
    text-align: center;
}

.button .btn-view{
    width: 100%;
    background: white;
    box-shadow: 0px 2px 4px rgba(128, 128, 128, 0.5);
    border-radius: 2rem;
    margin-top: 1rem;
    padding: .5rem 0rem;
    text-decoration: none;
    font-weight: bold;
    color: #00ab15;
    cursor: pointer;
    transition: all .3s;
}

.button .btn-view:hover{
    background-color: #00ab15;
    color: white
}

</style>
{{/section}}

{{#with course}}
<div class="course-cover">
    <div class='content-main'>
        <div class="image">
            <div style="background-image: url('{{srcImage}}')"></div>
        </div>
        <div class="body">
            <div class="info-course">
                <h2 class="course-name">{{courName}}</h2>
                <p class="cat-name">{{catName}}</p>
                <p class="teacher">Giảng viên: <span class="text-main">{{teacherName}}</span></p>
                <p class="last-update">Cập nhật ngày: <span class="text-main">{{formatDate lastUpdate 'DD/MM/YYYY'}}</span></p>
                <p class="course-desc">{{tinyDes}}</p>
            </div>
            <div class="sub-info-course">
                <div class="lession-info">
                    <p><span class="text-main">{{lectureCount}}</span> videos</p>
                    <p><span class="text-main">{{formatTime duration}}</span> giờ</p>
                </div>
                <div class="status-info">
                    <p><span class="text-main">{{format joinerCount}}</span> học viên</p>
                    <p class="text-warning">{{format price}} VND</p>
                </div>
            </div>
            <div class="button">
                <a class="btn-view"  target="_blank" href='https://main.d5ph5e9p9s4gm.amplifyapp.com/courses/{{id}}'>Ghé thăm khóa học</a>
            </div>
        </div>
    </div>
</div>
{{/with}}